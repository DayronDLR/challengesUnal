<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
  >

    <androidx.cardview.widget.CardView
        android:id="@+id/cardview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="20dp"
        app:cardBackgroundColor="@color/gray_firebase"
        app:cardElevation="100dp"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"

        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/imgCardViewUploadCategory"
                android:layout_width="105dp"
                android:layout_height="111dp"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="15dp"
                android:layout_marginRight="16dp"
                android:layout_marginBottom="15dp"
                tools:src="@drawable/icon_firebase" />

            <TextView
                android:id="@+id/txtNameUpload"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/spinner"
                android:layout_marginTop="25dp"
                android:layout_marginRight="5dp"
                android:layout_toRightOf="@+id/imgCardViewUploadCategory"
                android:text="Name:"
                android:textSize="20dp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/etxtNameValueCategory"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/txtNameUpload"
                android:textSize="15dp"
                android:layout_alignBottom="@+id/txtNameUpload"/>

            <TextView
                android:id="@+id/txtIdUpload"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/txtNameUpload"
                android:layout_marginTop="10dp"
                android:layout_marginRight="5dp"
                android:layout_toRightOf="@id/imgCardViewUploadCategory"
                android:text="Id:"
                android:textSize="20dp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/etxtIdValueCategory"
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/etxtNameValueCategory"

                android:layout_toRightOf="@id/txtIdUpload"

android:layout_alignBottom="@+id/txtIdUpload"
                android:textSize="15dp" />


            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/addButtonCategory"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="13dp"
                android:clickable="true"
                android:src="@android:drawable/ic_input_add"
                app:backgroundTint="@color/azul_firebase"
                app:rippleColor="@color/teal_700"
                android:layout_alignBottom="@+id/btnUploadCrudCategory"
                android:layout_toRightOf="@+id/btnUploadCrudCategory"/>


            <Button
                android:id="@+id/btnUploadCrudCategory"
                android:layout_width="102dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/etxtIdValueCategory"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="15dp"
                android:layout_toRightOf="@+id/imgCardViewUploadCategory"
                android:backgroundTint="@color/azul_marino_firebase"
                android:text="Upload image"
                android:textSize="10dp"
                android:textStyle="bold"/>
        </RelativeLayout>
    </androidx.cardview.widget.CardView>


</RelativeLayout>